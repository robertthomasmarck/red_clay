---
import Layout from "../layouts/Layout.astro";

// Get all images from public/img folder and subfolders
const imageFiles = import.meta.glob('/public/img/**/*.{jpg,jpeg,png,gif,webp}', { eager: true });

// Process image paths and extract filenames
const images = Object.keys(imageFiles).map(path => {
  // Convert /public/img/filename.jpg to /img/filename.jpg for the src
  const src = path.replace('/public', '');
  // Extract just the filename with extension
  const fullName = path.split('/').pop() || '';
  // Get relative path from /img for display (e.g., "portfolio/image.jpg")
  const relativePath = path.replace('/public/img/', '');

  return {
    src,
    name: relativePath,
  };
}).sort((a, b) => a.name.localeCompare(b.name));
---

<Layout title="Images" description="Gallery of all images">
  <div class="gallery-container">
    <h1 class="gallery-title">Images</h1>
    <p class="gallery-count">{images.length} images</p>

    <div class="gallery-grid">
      {images.map(image => (
        <div class="gallery-item">
          <a href={image.src} target="_blank" rel="noopener">
            <img src={image.src} alt={image.name} loading="lazy" />
          </a>
          <span class="image-name">{image.name}</span>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .gallery-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .gallery-title {
    font-family: "Legan", var(--font-sans-serif);
    font-size: 4.5rem;
    font-weight: 300;
    font-variant: small-caps;
    text-transform: lowercase;
    text-align: center;
    margin-bottom: 0.5rem;
    color: var(--color-base);
  }

  .gallery-count {
    text-align: center;
    font-family: var(--font-serif);
    font-size: 1.8rem;
    color: var(--color-base);
    opacity: 0.7;
    margin-bottom: 2rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .gallery-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .gallery-item a {
    display: block;
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    background-color: rgba(0, 0, 0, 0.1);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item a:hover img {
    transform: scale(1.05);
  }

  .image-name {
    margin-top: 0.5rem;
    font-family: var(--font-sans-serif);
    font-size: 1.91rem;
    color: var(--color-base);
    text-align: center;
    word-break: break-all;
    opacity: 0.8;
  }

  @media (max-width: 1000px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 700px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .gallery-title {
      font-size: 3rem;
    }
  }

  @media (max-width: 400px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
