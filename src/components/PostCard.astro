---
import Button from "./Button.astro";

export interface Props {
  count: number;
  post: any; // using any for now, better to use CollectionEntry
  slug: string;
  subtitle?: string;
  subtitle2?: string;
  displayTitle?: string;
  hideBackground?: boolean;
  disableLink?: boolean;
  buttonLabel?: string;
  buttonHref?: string;
  skipLinkText?: string;
  skipLinkHref?: string;
}

const {
  count,
  post,
  slug,
  subtitle,
  subtitle2,
  displayTitle,
  hideBackground,
  disableLink,
  buttonLabel,
  buttonHref,
  skipLinkText,
  skipLinkHref,
} = Astro.props;
const thumbnail = post.data.thumbnail;
const title = post.data.title;
const logo = post.data.logo;
const backgroundPosition = post.data.backgroundPosition || "center center";
const isLarge = count % 3 === 0;
const isHero = count === 1;

// Construct background image style
const bgStyle =
  thumbnail && !hideBackground ? `background-image: url(${thumbnail}); background-position: ${backgroundPosition};` : "";
const hasImage = thumbnail && !hideBackground;
const postClass = `post-card ${isLarge ? "post-card-large" : ""} ${hasImage ? "with-image" : "no-image"} ${isHero ? "is-hero" : ""} post`;
---

<article class={`${postClass} fade-in-on-scroll`} style={bgStyle}>
  {
    disableLink ? (
      <div class="post-card-link">
        <div class={`post-card-content ${subtitle ? "with-subtitle" : ""}`}>
          {isHero && logo ? (
            <div class="post-card-inner">
              <img src={logo} alt={title} class="post-card-logo" />
              {displayTitle && (
                <h2 class="post-card-display-title">{displayTitle}</h2>
              )}
              {subtitle && <p class="post-card-subtitle">{subtitle}</p>}
              {subtitle2 && <p class="post-card-subtitle2">{subtitle2}</p>}
              {buttonLabel && (
                <div class="post-card-buttons">
                  <Button
                    variant="orange"
                    label={buttonLabel}
                    href={buttonHref}
                  />
                  {skipLinkText && (
                    <Button
                      variant="dark"
                      label={skipLinkText}
                      href={skipLinkHref}
                    />
                  )}
                </div>
              )}
            </div>
          ) : !isHero ? (
            <div class="post-card-standard">
              <h2 class="post-card-standard-title">{title}</h2>
              <p class="post-card-description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
                eiusmod tempor incididunt ut labore et dolore magna aliqua.
              </p>
            </div>
          ) : (
            <h2 class="post-card-title">{title}</h2>
          )}
        </div>
      </div>
    ) : (
      <a href={`/${slug}`} class="post-card-link">
        <div class={`post-card-content ${subtitle ? "with-subtitle" : ""}`}>
          {isHero && logo ? (
            <div class="post-card-inner">
              <img src={logo} alt={title} class="post-card-logo" />
              {displayTitle && (
                <h2 class="post-card-display-title">{displayTitle}</h2>
              )}
              {subtitle && <p class="post-card-subtitle">{subtitle}</p>}
              {subtitle2 && <p class="post-card-subtitle2">{subtitle2}</p>}
              {buttonLabel && (
                <div class="post-card-buttons">
                  <Button
                    variant="orange"
                    label={buttonLabel}
                    href={buttonHref}
                  />
                  {skipLinkText && (
                    <Button
                      variant="dark"
                      label={skipLinkText}
                      href={skipLinkHref}
                    />
                  )}
                </div>
              )}
            </div>
          ) : !isHero ? (
            <div class="post-card-standard">
              <h2 class="post-card-standard-title">{title}</h2>
              <p class="post-card-description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
                eiusmod tempor incididunt ut labore et dolore magna aliqua.
              </p>
            </div>
          ) : (
            <h2 class="post-card-title">{title}</h2>
          )}
        </div>
      </a>
    )
  }
</article>

<style>
  /* Post Feed */
  .post-card {
    position: relative;
    flex: 1 0 auto;
    display: flex;
    position: relative;
    height: 35vw;
    background: linear-gradient(135deg, #1f1f1f 0%, #111 100%) center center;
    background-size: cover;
    overflow: hidden;
    counter-increment: posts;
    margin: 1rem;
    border-radius: 12px;
  }

  @media (max-width: 700px) {
    .post-card {
      flex: 1 1 100%;
      height: 70vw;
    }
  }

  .post-card-large {
    flex: 1 1 100%;
  }

  .post-card.is-hero {
    height: 38.5vw;
  }

  @media (max-width: 700px) {
    .post-card.is-hero {
      height: 77vw;
    }
  }

  /* Photo always shows in full color */
  .post-card.with-image {
    filter: none;
  }

  .post-card-link {
    flex: 1 1 auto;
    display: block;
    text-decoration: none; /* Reset anchor default */
  }

  .post-card-content {
    flex: 1 1 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    color: #fff;
    background: rgba(0, 0, 0, 0.6); /* increased opacity */
    opacity: 1;
    transition: opacity 0.5s cubic-bezier(0.33, 0, 0.2, 1);
    text-align: center;
  }

  .post-card.with-image .post-card-content {
    opacity: 1;
    background: linear-gradient(
      to bottom,
      rgba(103, 47, 12, 0.429),
      /* rgba(138, 63, 16, 0.67), */ rgba(35, 22, 8, 0.99)
    );
  }

  .post-card.is-hero.with-image .post-card-content {
    background: linear-gradient(
      to bottom,
      rgba(103, 47, 12, 0.6),
      rgba(35, 22, 8, 1)
    );
  }

  .post-card:not(.is-hero) .post-card-content {
    align-items: flex-start;
    justify-content: flex-start;
  }

  .post-card-logo {
    max-height: 540px;
    max-width: 30%;
    object-fit: contain;
    opacity: 0;
    animation: fadeInContent 2.5s ease-out 0.5s forwards;
  }

  @media (max-width: 850px) {
    .post-card-logo {
      max-height: 810px;
      max-width: 45%;
    }
  }

  .post-card-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding-top: 4rem;
    padding-bottom: 6rem;
    width: 100%;
    text-align: center;
  }

  @keyframes fadeInContent {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .post-card-display-title {
    margin: 0;
    font-family: "Legan", var(--font-sans-serif);
    font-size: 8.625rem;
    font-weight: 300;
    text-transform: lowercase;
    font-variant: small-caps;
    letter-spacing: 2px;
    color: rgba(255, 240, 219, 1);
    text-align: center;
    text-shadow: 0px 0px 6px black;
    opacity: 0;
    animation: fadeInContent 2.5s ease-out 0.65s forwards;
  }

  .post-card-display-title::after {
    content: "";
    display: block;
    width: 80px;
    height: 1px;
    background-color: rgba(255, 240, 219, 1);
    margin: 1rem auto 0;
  }

  .post-card-subtitle {
    margin: 0;
    margin-top: 1.5rem;
    font-family: var(--font-sans-serif);
    font-size: 3.24rem;
    font-weight: 400;
    text-transform: lowercase;
    font-variant: small-caps;
    letter-spacing: 2px;
    color: rgba(255, 240, 219, 1);
    text-align: center;
    text-shadow: 0px 0px 6px black;
    opacity: 0;
    animation: fadeInContent 2.5s ease-out 0.8s forwards;
  }

  .post-card-subtitle2 {
    margin: 0;
    margin-top: 1rem;
    font-family: var(--font-serif);
    font-size: 2.16rem;
    font-weight: 400;
    font-style: italic;
    letter-spacing: 1px;
    color: rgba(255, 240, 219, 1);
    text-align: center;
    text-shadow: 0px 0px 6px black;
    opacity: 0;
    animation: fadeInContent 2.5s ease-out 0.95s forwards;
  }

  .post-card-buttons {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 5rem;
    opacity: 0;
    animation: fadeInContent 2.5s ease-out 1.1s forwards;
  }

  @media (max-width: 700px) {
    .post-card-buttons {
      flex-direction: column;
      gap: 0.75rem;
    }
  }

  @media (max-width: 700px) {
    .post-card-display-title {
      font-size: 6rem;
    }

    .post-card-subtitle {
      font-size: 2.52rem;
    }

    .post-card-subtitle2 {
      font-size: 1.68rem;
    }
  }

  /* Mobile: Orange gradient overlay instead of dark */
  @media (max-width: 700px) {
    .post-card.with-image .post-card-content {
      opacity: 1;
      background: linear-gradient(
        to bottom,
        rgba(103, 47, 12, 0.429),
        /* rgba(138, 63, 16, 0.67), */ rgba(35, 22, 8, 0.99)
      );
    }
  }

  .post-card-title {
    margin: 0;
    display: inline-block;
    font-size: 3rem;
    max-width: 70%;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.33, 0, 0.2, 1);
    text-shadow: 0px 0px 6px black;
    font-family: "Legan", var(--font-sans-serif);
    font-variant: small-caps;
    text-transform: lowercase;
    font-weight: 300;
  }

  /* Standard PostCard layout (non-hero cards) */
  .post-card-standard {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    height: 100%;
    padding: 16.67% 2rem 2rem 16.67%;
  }

  .post-card-standard-title {
    margin: 0 0 1rem 0;
    font-size: 4.5rem;
    font-family: "Legan", var(--font-sans-serif);
    font-variant: small-caps;
    text-transform: lowercase;
    font-weight: 300;
    text-align: left;
    color: rgba(255, 240, 219, 1);
    text-shadow: 0px 0px 6px black;
  }

  .post-card-standard-title::after {
    content: "";
    display: block;
    width: 80px;
    height: 1px;
    background-color: rgba(255, 240, 219, 1);
    margin: 1rem 0 0;
  }

  .post-card-description {
    width: 70%;
    text-align: left;
    font-family: var(--font-serif);
    font-size: 1.6rem;
    line-height: 1.8;
    color: rgba(255, 240, 219, 1);
    text-shadow: 0px 0px 4px black;
    margin-top: 1rem;
  }

  @media (max-width: 700px) {
    .post-card-standard-title {
      font-size: 3rem;
    }

    .post-card-description {
      width: 90%;
      font-size: 1.4rem;
    }
  }

  /* Posts without images */
  .post-card.no-image::before {
    display: block;
    content: counter(posts);
    position: absolute;
    bottom: -0.15em;
    right: 5vw;
    font-size: 28vw;
    line-height: 1em;
    font-weight: var(--font-heavy); /* Needs vars.css */
    letter-spacing: -0.1em;
    color: rgba(0, 0, 0, 0.2);
  }

  .post-card.no-image .post-card-content {
    justify-content: flex-start;
    align-items: flex-start;
    padding: 4vw;
  }

  /* Hero cards without background should still be centered */
  .post-card.is-hero.no-image .post-card-content {
    justify-content: center;
    align-items: center;
    padding: 0;
    background: linear-gradient(
      to bottom,
      rgba(103, 47, 12, 1),
      rgba(35, 22, 8, 1)
    );
  }

  .post-card.is-hero.no-image::before {
    display: none;
  }

  .post-card.no-image .post-card-title {
    font-size: 5rem;
    line-height: 1.15em;
    text-align: left;
  }

  .post-card.no-image:hover .post-card-title {
    text-decoration: underline;
  }

  @media (max-width: 1200px) {
    .post-card.no-image .post-card-title {
      font-size: 3.4rem;
    }
  }
  @media (max-width: 700px) {
    .post-card.no-image::before {
      font-size: 50vw;
    }
  }
</style>
