---
import Button from "./Button.astro";
---

<div class="button-row">
  <Button variant="orange" label="CONTACT ME TODAY!" href="/contact#contact-section" />
</div>

<style>
  .button-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    flex: 1 1 100%;
    padding: 1rem;
    margin: 1rem;
  }

  /* Mobile: Keep side by side, reduce gap */
  @media (max-width: 700px) {
    .button-row {
      gap: 0.75rem;
      padding: 0.5rem;
      margin: 0.5rem;
    }
  }
</style>
