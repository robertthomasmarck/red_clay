---
import Button from "./Button.astro";

export interface Props {
  title?: string;
  text?: string;
  imageSrc?: string;
  imageAlt?: string;
  buttonLabel?: string;
  buttonHref?: string;
  skipLinkText?: string;
  skipLinkHref?: string;
  reversed?: boolean;
}

const {
  title,
  text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
  imageSrc = "/img/clay-images-7.jpg",
  imageAlt = "Featured image",
  buttonLabel = "CONTACT ME TODAY!",
  buttonHref,
  skipLinkText = "No thanks: take me to the site.",
  skipLinkHref,
  reversed = false,
} = Astro.props;

const showButtons = buttonHref || skipLinkHref;
---

<div class={`content-row ${reversed ? "reversed" : ""} fade-in-on-scroll`}>
  <div class="text-section">
    {title && <h2 class="content-row-title">{title}</h2>}
    <div class="text-wrapper">
      <p class="text-content">{text}</p>
    </div>
    {showButtons && (
      <div class="button-wrapper">
        {buttonHref && <Button variant="orange" label={buttonLabel} href={buttonHref} />}
        {skipLinkHref && <a href={skipLinkHref} class="skip-link">{skipLinkText}</a>}
      </div>
    )}
  </div>
  <div class="photo-section">
    <img src={imageSrc} alt={imageAlt} />
  </div>
</div>

<style>
  .content-row {
    display: flex;
    flex: 1 1 100%;
    margin: 1rem;
    border-radius: 12px;
    overflow: hidden;
    min-height: 400px;
  }

  .content-row.reversed {
    flex-direction: row-reverse;
  }

  .text-section {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    background-color: var(--color-bg);
  }

  .text-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .text-content {
    width: 70%;
    text-align: center;
    font-family: var(--font-serif);
    font-size: 1.92rem;
    line-height: 1.8;
    color: var(--color-base);
  }

  .content-row-title {
    margin: 0 0 1rem 0;
    font-size: 4.5rem;
    font-family: "Legan", var(--font-sans-serif);
    font-variant: small-caps;
    text-transform: lowercase;
    font-weight: 300;
    text-align: center;
    color: var(--color-base);
  }

  .button-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    padding-bottom: 0;
  }

  .button-wrapper .skip-link {
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .skip-link {
    font-family: var(--font-sans-serif);
    font-size: 1.5rem;
    color: var(--color-base);
    opacity: 0.6;
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .skip-link:hover {
    opacity: 1;
  }

  .photo-section {
    flex: 1;
    overflow: hidden;
  }

  .photo-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Mobile/Tablet: Hide photo section */
  @media (max-width: 850px) {
    .content-row {
      min-height: auto;
    }

    .text-section {
      padding: 1.5rem;
    }

    .text-content {
      width: 90%;
      font-size: 1.68rem;
    }

    .button-wrapper {
      padding-top: 1.5rem;
    }

    .button-wrapper .skip-link {
      margin-top: 2rem;
      margin-bottom: 0.5rem;
    }

    .skip-link {
      font-size: 1.35rem;
    }

    .photo-section {
      display: none;
    }
  }
</style>
